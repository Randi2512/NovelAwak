<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="4dp"
                android:id="@+id/imageNovel"
                android:src="@drawable/gambar_buku"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/imageNovel"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtJudulBuku"
                    android:text="Rindu-Tere Liye"
                    android:textSize="30sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPenerbit"
                    android:layout_below="@id/txtJudulBuku"
                    android:text="Republika"
                    android:textAppearance="@style/Base.CardView"
                    android:textSize="13sp"
                    android:textColor="@color/colorGrey"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPenulis"
                    android:layout_below="@id/txtPenerbit"
                    android:text="Novel Rindu ‘mempertemukan’ lima kisah dengan lima pertanyaan besar pada sebuah kapal haji pada 1938. "
                    android:textSize="15sp"
                    android:textColor="@color/colorGrey"
                    android:textStyle="bold"/>




            </LinearLayout>


        </RelativeLayout>

</androidx.cardview.widget.CardView>